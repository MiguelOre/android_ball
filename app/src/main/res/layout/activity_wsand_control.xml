<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp"
    android:background="@drawable/control_ball"
    tools:context=".Activities.WSAndControlActivity">

    <TextView
        android:id="@+id/txt_room"
        android:layout_width="294dp"
        android:layout_height="35dp"
        android:background="@drawable/style_edit_text"
        android:text="Nombre jugador    "
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageButton
        android:id="@+id/ib_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="312dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/arriba"
        app:layout_constraintBottom_toTopOf="@id/v_left"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ib_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="124dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/izquierda"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="139dp" />

    <ImageButton
        android:id="@+id/ib_down"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="24dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/abajo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_left" />

    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="476dp"
        android:layout_marginTop="5dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/derecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486" />

    <View
        android:id="@+id/v_left"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/v_right"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />


    <Button
        android:id="@+id/btnIngresarNombre"
        android:layout_width="67dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:enabled="false"
        android:text="tmp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="54dp" />

    <Button
        android:id="@+id/btnDeathZone"
        android:layout_width="161dp"
        android:layout_height="41dp"
        android:text="Death Zone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>