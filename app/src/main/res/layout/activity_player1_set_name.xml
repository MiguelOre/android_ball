<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Player1SetName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/past"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvNombreJugador1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:text="1. Ingresa tu usuario"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_NombreJugador1"
        android:layout_width="299dp"
        android:layout_height="52dp"
        android:background="@drawable/style_edit_text"
        android:hint="@string/NombreSala"
        android:inputType="text"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space" />

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@+id/v_flipper"
        app:layout_constraintStart_toStartOf="@+id/v_flipper"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreJugador1" />

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/v_flipper"
        app:layout_constraintStart_toStartOf="@+id/v_flipper"
        app:layout_constraintTop_toBottomOf="@+id/et_NombreJugador1" />

    <TextView
        android:id="@+id/textViewElegirAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Elige tu avatar"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2" />

    <Space
        android:id="@+id/space3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewElegirAvatar"
        />

    <ViewFlipper
        android:id="@+id/v_flipper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/space3" />

    <Button
        android:id="@+id/prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Anterior"
        app:layout_constraintStart_toStartOf="@+id/v_flipper"
        app:layout_constraintTop_toBottomOf="@+id/v_flipper" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="28dp"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="@+id/v_flipper"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/prev_button"
        app:layout_constraintTop_toBottomOf="@+id/v_flipper" />

    <Space
        android:id="@+id/space4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_flipper" />

    <Button
        android:id="@+id/btnIngresarNombreJ1"
        android:layout_width="158dp"
        android:layout_height="62dp"
        android:background="@drawable/style_principal_button"
        android:enabled="false"
        android:text="Continuar"
        android:textColor="@color/zxing_status_text"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space4"
        app:layout_constraintVertical_bias="0.52"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>